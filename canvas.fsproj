<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <PackageId>DIKU.Canvas</PackageId>
    <Version>1.0.0-alpha1</Version>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <Authors>Martin Elsman, Ken Friis Larsen, Mads Obits√∏, Jon Sporring</Authors>
    <Company>DIKU</Company>
    <RepositoryUrl>https://github.com/kfl/img-util-fs.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <Description>
    This library features a number of utility functions for drawing simple 2d graphics on a canvas, including features for running simple user-interactive apps that display such canvas.
    </Description>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="SDL.fs" />
    <Compile Include="SDL_image.fs" />
    <Compile Include="canvas.fsi" />
    <Compile Include="canvas.fs" />
  </ItemGroup>

  <ItemGroup>
    <None Include=".gitignore" />
    <None Include="LICENSE" Pack="true" PackagePath=""/>
    <None Include="README.md" Pack="true" PackagePath=""/>
    <None Include="README-SDL.txt" Pack="true" PackagePath=""/>
  </ItemGroup>

  <ItemGroup>
    <Content Include="lib/*.so" >
      <PackagePath>runtimes/linux-x64/native/%(Filename)%(Extension)</PackagePath>
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      <Pack>true</Pack>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <Content Include="lib/*.dll" >
      <PackagePath>runtimes/win-x64/native/%(Filename)%(Extension)</PackagePath>
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      <Pack>true</Pack>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <Content Include="lib/libSDL2-x64.dylib" >
      <PackagePath>runtimes/osx-x64/native/libSDL2.dylib</PackagePath>
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      <Pack>true</Pack>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <Content Include="lib/libSDL2_image.dylib" >
      <PackagePath>runtimes/osx-x64/native/libSDL2_image.dylib</PackagePath>
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      <Pack>true</Pack>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <Content Include="lib/libSDL2-arm64.dylib" >
      <PackagePath>runtimes/osx.11.0-arm64/native/libSDL2.dylib</PackagePath>
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      <Pack>true</Pack>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <Content Include="lib/libSDL2-arm64.dylib" >
      <PackagePath>runtimes/osx.12-arm64/native/libSDL2.dylib</PackagePath>
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      <Pack>true</Pack>
    </Content>
  </ItemGroup>
</Project>
